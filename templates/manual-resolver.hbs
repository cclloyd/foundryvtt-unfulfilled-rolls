<form autocomplete="off">
    <div class="dice-roll">
        {{#if roll.options.flavor}}
            <h2>{{roll.options.flavor}}</h2>
        {{/if}}
        <div class="dice-result">
            <div class="dice-formula">{{roll._formula}}</div>
        </div>
    </div>

    <div class="terms">
        {{#each terms}}
            <div class="dice-term flexcol">
                {{#if this.faces}}
                    <i class="fa-solid {{this.icon}}"></i>
                    <p class="dice-term-faces">d{{this.faces}}</p>
                {{/if}}
                <input type="text" class="dice-term-input" name="{{this.id}}" min="1" max="{{this.faces}}"
                       placeholder="{{this.randomValue}}" />
            </div>
        {{/each}}
    </div>

    <div class="dialog-buttons flexrow">
        <button class="dialog-button ok default" data-button="ok">
            <i class="fas fa-check"></i>
            Submit
        </button>
<!--        <button class="dialog-button cancel" data-button="cancel">-->
<!--            <i class="fas fa-bolt-auto"></i>-->
<!--            Roll automatically-->
<!--        </button>-->
    </div>
</form>
